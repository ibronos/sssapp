generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model user {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  role role @relation(fields: [role_id], references: [id])
  role_id Int
  is_verified Int @default(0) @db.TinyInt
}

model role {
  id    Int     @id @default(autoincrement())
  slug  String @unique
  name  String
  user user[]
}
